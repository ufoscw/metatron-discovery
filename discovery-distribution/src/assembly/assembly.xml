<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.parent.artifactId}-${project.parent.version}-${build.timestamp}</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/generated-resources</directory>
            <includes>
                <include>*/*</include>
                <include>licenses.xml</include>
            </includes>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>./bin</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>metatron.sh</include>
                <include>common.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>./doc</directory>
            <includes>
                <include>*.pdf</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>./conf</directory>
            <includes>
                <include>*.templete</include>
                <include>*.templete.yaml</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>./extensions</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>extensions</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>app.metatron.discovery:discovery-server</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>